// +prop AppID = 1
// +prop Conditions = 'ContractConditions("MainCondition")'
contract AppendMenu {
	data {
		Id     int
		Value      string
	}
	conditions {
		ConditionById("menu", false)
	}
	action {
		var row map
		row = DBRow("menu").Columns("value").WhereId($Id)
        var val string
        val = row["value"] + "\r\n" + $Value
		DBUpdate("menu", $Id, {"value": val})

	}
}